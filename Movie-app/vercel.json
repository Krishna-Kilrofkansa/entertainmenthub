{
  "rewrites": [
    {
      "source": "/api/mangadex/:path*",
      "destination": "https://api.mangadex.org/:path*"
    },
    {
      "source": "/api/jikan/:path*",
      "destination": "https://api.jikan.moe/v4/:path*"
    },
    {
      "source": "/api/books/:path*",
      "destination": "https://www.googleapis.com/books/v1/:path*"
    },
    {
      "source": "/covers/:path*",
      "destination": "https://uploads.mangadex.org/covers/:path*"
    }
  ]
}